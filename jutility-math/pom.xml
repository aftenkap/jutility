<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>jutility-math</artifactId>
	<packaging>jar</packaging>

	<name>jutility-math</name>
	<url>http://maven.apache.org</url>

	<parent>
		<groupId>org.jutility</groupId>
		<artifactId>jutility</artifactId>
		<version>0.1.0-SNAPSHOT</version>
		<relativePath>../jutility</relativePath>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<!-- Java Version -->
		<java.version>1.6</java.version>

		<!-- CSV Library -->
		<net.sf.supercsv.version>2.2.0</net.sf.supercsv.version>

	</properties>


	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
			</plugin>
		</plugins>

	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<outputDirectory>doc/</outputDirectory>
					<show>protected</show>
					<detectLinks>true</detectLinks>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<dependencies>

		<!-- jutility-common -->
		<dependency>
			<groupId>org.jutility</groupId>
			<artifactId>jutility-common</artifactId>
			<version>0.1.0-SNAPSHOT</version>
		</dependency>

	</dependencies>
</project>
