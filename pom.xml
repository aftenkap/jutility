<project
	xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.jutility</groupId>
	<artifactId>jutility</artifactId>
	<version>0.1.1-SNAPSHOT</version>

	<name>jUtility Library</name>
	<url>http://jutility.org</url>
	<description>A utility library for Java. This is the root project for
		all jutility modules.
	</description>

	<organization>
		<name>jutility.org</name>
		<url>http://jutility.org</url>
	</organization>

	<developers>
		<developer>
			<id>aftenkap</id>
			<name>Peter J. Radics</name>
			<email>peter.radics@jutility.org</email>
		</developer>
	</developers>

	<inceptionYear>2013</inceptionYear>

	<packaging>pom</packaging>

	<modules>
		<module>jutility-common</module>
		<module>jutility-io</module>
		<module>jutility-javafx</module>
		<module>jutility-math</module>
		<module>jutility-all</module>
	</modules>


	<scm>
		<url>scm:git:git@github.com:aftenkap/jutility.git</url>
		<connection>scm:git:git@github.com:aftenkap/jutility.git</connection>
		<developerConnection>scm:git:git@github.com:aftenkap/jutility.git
		</developerConnection>
		<tag>master</tag>
	</scm>

	<issueManagement>
		<system>GitHub</system>
		<url>https://github.com/aftenkap/jutility/issues</url>
	</issueManagement>

	<properties>
		<project.build.sourceEncoding>utf8</project.build.sourceEncoding>

		<!-- Java Version -->
		<java.version>1.8</java.version>


		<!-- Testing -->
		<junit.version>4.11</junit.version>
		<org.hamcrest.version>1.3</org.hamcrest.version>

		<!-- Logging -->
		<org.slf4j.version>1.7.7</org.slf4j.version>
		<log4j.version>1.2.17</log4j.version>
	</properties>
	<build>


		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
			</plugin>
      <plugin>
   <groupId>org.apache.maven.plugins</groupId>
       <artifactId>maven-surefire-plugin</artifactId>
           <version>2.18</version>
               <dependencies>
                     <dependency>
                             <groupId>org.apache.maven.surefire</groupId>
                                     <artifactId>surefire-junit47</artifactId>
                                             <version>2.18</version>
                                                   </dependency>
                                                       </dependencies>
                                                         </plugin>


			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>first</id>
						<goals>
							<goal>update-file-header</goal>
						</goals>
						<phase>process-sources</phase>
					</execution>
					<execution>
						<id>download-licenses</id>
						<goals>
							<goal>download-licenses</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<licenseName>apache_v2</licenseName>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<outputDirectory>doc/</outputDirectory>
					<show>protected</show>
					<detectLinks>true</detectLinks>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<dependencies>
		<!-- Testing -->
		<dependency>
			<groupId>org.hamcrest</groupId>
			<artifactId>hamcrest-core</artifactId>
			<version>${org.hamcrest.version}</version>
      <scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>


		<!-- Logging -->
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>${org.slf4j.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>jcl-over-slf4j</artifactId>
			<version>${org.slf4j.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>${org.slf4j.version}</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
			<scope>runtime</scope>
		</dependency>
	</dependencies>


</project>
